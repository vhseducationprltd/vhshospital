    private void PIDKeyPressed(java.awt.event.KeyEvent evt) {                               

        if (evt.getKeyCode() == (10)) {
            try {
                String query = "SELECT * FROM APPOINTMENT WHERE PID=" + Integer.parseInt(PID.getText());   

                ResultSet result = statement.executeQuery(query);
                while (result.next()) {
                    
                    NAME.setText(result.getString("NAME"));
                    AGE.setText(result.getString("AGE"));
                    ADDHAR.setText(result.getString("ADDHAR"));
                    ADDRESS.setText(result.getString("ADDRESS"));
                    PID.setText(result.getString("PID"));
                    PHONE.setText(result.getString("PHONE"));
                    SYMPTOMPS.setText(result.getString("SYMPTOMPS"));
                    OPD_NO.setText(result.getString("OPD_NO"));
                    FEE.setText(result.getString("FEE"));
                    anup.setText(result.getString("SYMPTOMPS"));

                }
            } catch (Exception e) {

            }
        }
    }                              

