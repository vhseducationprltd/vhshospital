    }
 void showDate(){
        Date d = new Date();
        SimpleDateFormat s = new SimpleDateFormat("dd-MM-yyyy");
        DATE.setText(s.format (d));
        
        int Sr=1;
            try{  
                  ResultSet result = statement.executeQuery("SELECT * FROM USERS");
                  
                  while(result.next()){
                      Sr=result.getInt("SR") +1;
                  }  
            }catch(Exception e){
                System.out.println("Appointment problem : "+ e);
            }
                  PID.setText(Integer.toString(Sr));
                  
    
    }
    
 void showTime(){
     new Timer(0, new ActionListener(){
            @Override
            public void actionPerformed(ActionEvent e) {
                Date d = new Date();
                SimpleDateFormat s = new SimpleDateFormat("hh:mm:ss a");
                TIME.setText(s.format(d));
            }
            
        }).start();
    }
 
 void getData() {
        Pid = Integer.parseInt(PID.getText());
        Name = NAME.getText();
        Age = Integer.parseInt(AGE.getText());
        Gender = GENDER.getItemAt(GENDER.getSelectedIndex());
        Phone = Long.parseLong(PHONE.getText());
        Symptomps = SYMPTOMPS.getText();
        Addhar = Long.parseLong(ADDHAR.getText());
        Dr_Name = DR_NAME.getItemAt(DR_NAME.getSelectedIndex());
        Opd_No = Integer.parseInt(OPD_NO.getText());
        Fee = Integer.parseInt(FEE.getText());
        Date = DATE.getText();
        Time = TIME.getText();
        Address = ADDRESS.getText();

    }
 
 

