    private void VIEWActionPerformed(java.awt.event.ActionEvent evt) {                                     

        try {
            String query = "SELECT * FROM APPOINTMENT";
            ResultSet result = statement.executeQuery(query);
            new TABLE(result).setVisible(true);
            TABLE data = new TABLE();
            data.setVisible(true);
            data.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
            clearFields();
        } catch (Exception e) {
            System.out.println(e);
        }
    }                                    

    private void UPDATEActionPerformed(java.awt.event.ActionEvent evt) {                                       
        getData();
        try {

            String query = " UPDATE APPOINTMENT SET " + "NAME=" + "'" + Name + "'," + "AGE=" + Age + "," + "GENDER=" + "'" + Gender + "'," + "ADDRESS=" + "'" + Address + "'," + "ADDHAR=" + Addhar + "," + "PHONE=" + Phone + "," + "SYMPTOMPS=" + "'" + Symptomps + "'," + "DR_NAME=" + "'" + Dr_Name + "'," + "OPD_NO=" + Opd_No + "," + "FEE=" + Fee + " WHERE PID=" + Pid;

            statement.execute(query);
            clearFields();
        } catch (Exception e) {
            System.out.println(e);
        }
    }                                      

    private void DELETEActionPerformed(java.awt.event.ActionEvent evt) {                                       
        Pid = Integer.parseInt(PID.getText());
        String query = "DELETE FROM APPOINTMENT WHERE PID=" + Pid;
        try {
            statement.execute(query);
            clearFields();

        } catch (Exception e) {
        }
    }                                      

    private void SUBMITActionPerformed(java.awt.event.ActionEvent evt) {                                       

        int Sr = 0;
        getData();
        try {
            String query = "SELECT SR FROM APPOINTMENT";

            ResultSet result = statement.executeQuery(query);
            while (result.next()) {
                Sr = Integer.parseInt(result.getString("SR"));
            }
            System.out.println(Sr);

            query = ("INSERT INTO APPOINTMENT (SR,NAME,AGE,GENDER,PHONE,ADDHAR,ADDRESS,SYMPTOMPS,DR_NAME,OPD_NO,FEE,PID,DATE,TIME)VALUES(" 
            + (Sr + 1) + ",'" + Name + "'," + Age + ",'" + Gender + "'," + Phone + "," + Addhar + ",'" + Address + "','" + Symptomps + "','" + Dr_Name + "'," + Opd_No + ",
            " + Fee + "," + Pid + ",'" + Date + "','" + Time + "')");
            System.out.println(query);
            statement.execute(query);
            clearFields();
        } catch (Exception e) {
            System.out.println("nahi jal");
            System.out.println(e);
        }
    }                                      

